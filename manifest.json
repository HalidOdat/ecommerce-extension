{
  "manifest_version": 3,
  "name": "Ecommercify",
  "description": "A chrome and firefox extension for helping you shop",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    },
    "default_title": "Ecommercify",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages.json"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}